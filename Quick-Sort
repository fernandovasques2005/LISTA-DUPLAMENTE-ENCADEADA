#include <stdio.h>

int Quick(int v[], int inicio, int fim){
    int pivo = v[fim];
    int i = inicio - 1;

    for (int j = inicio; j < fim; j++){
        if (v[j] <= pivo){
            i++;
            int temp = v[i];
            v[i] = v[j];
            v[j] = temp;
        }
    }

    int temp = v[i+1];
    v[i+1] = v[fim];
    v[fim = temp];
    return i+1;
}

void quickSort(int v[], int inicio, int fim){
    if (inicio < fim)[
        int p = Quick(v, inicio, fim);
        quickSort(v, inicio, p-1);
        quickSort(v, p+1, fim);
    ]
}

void imprimir(int v[], int n){
    for (int i = 0; i < n; i++){
        printf("%d", v[i]);
    }
    printf("\n");
}

int main(){
    int v[] = {7, 1, 4, 10, 3, 9, 6};
    int n = sizeof(v) / sizeof(v[0]);

    printf("Vetor original:\n");
    imprimir(v, n);

    quickSort(v, 0, n-1);

    printf("Vetor ordenado: \n");
    imprimir(v, n);

    return 0;
}
